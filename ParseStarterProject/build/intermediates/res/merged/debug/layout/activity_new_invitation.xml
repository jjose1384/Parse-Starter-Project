<ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.parse.starter.letshangout.activity.NewInvitationActivity">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/whatLabel"
                android:id="@+id/whatLabel"
                android:layout_weight="2"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_what"
                android:layout_weight="7"
                android:inputType="text"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/whenLabel"
                android:id="@+id/whenLabel"
                android:layout_weight="2"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_date"
                android:inputType="date"
                android:focusable="false"
                android:layout_weight="4"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_time"
                android:inputType="time"
                android:focusable="false"
                android:layout_weight="3"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/whoLabel"
                android:id="@+id/whoLabel"
                android:layout_weight="2"/>

            <com.parse.starter.letshangout.utils.ContactsCompletionView
                android:id="@+id/contactsCompletionView_who"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/email_prompt"
                android:imeOptions="actionDone"
                android:textColor="@android:color/darker_gray"
                android:textSize="19sp"
                android:nextFocusDown="@+id/editText"
                android:inputType="text|textNoSuggestions|textMultiLine"
                android:focusableInTouchMode="true"
                android:layout_weight="7"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/whereLabel"
                android:id="@+id/whereLabel"
                android:layout_weight="2"/>

            <RadioGroup
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="vertical"
                android:id="@+id/whereRadioGroup">
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/inviteButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:text="@string/inviteButton" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:text="@string/cancelButton" />

        </LinearLayout>

    </LinearLayout>
</ScrollView><!-- From: file:/C:/Users/Jason/Desktop/backup/Development/AndroidStudioProjects/Parse-Starter-Project/ParseStarterProject/src/main/res/layout/activity_new_invitation.xml -->